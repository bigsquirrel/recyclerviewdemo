<?xml version="1.0" encoding="utf-8"?>
<com.xgfe.android.recyclerviewdemo.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.xgfe.android.recyclerviewdemo.CustomMapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.xgfe.android.recyclerviewdemo.CustomRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#AAb9b9b9" />

</com.xgfe.android.recyclerviewdemo.CustomLayout>